// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id             String   @id @default(uuid())
  enterprise     String?  @unique
  email          String?  @unique
  emailverified  String?
  hashedPassword String?
  createAt       DateTime @default(now())
  updatedAt      DateTime @updatedAt
  logo           String?

  stores         Store[] @relation("StoreOfOwner")
}

model Store {
  id         String   @id @default(uuid())
  name       String
  createAt   DateTime @default(now())
  updatedAt  DateTime @updatedAt
  coverImage String?
  ownerId    String
  owner      User     @relation("StoreOfOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}
